
    <% layout('layouts/boilerplate') -%>

    <div class="form-container">
        <form action="/Temples/<%= CurrentTem._id %>?_method=PATCH" method="POST">
            <!-- Input for Name -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" class="form-input" required value="<%= CurrentTem.name %>">

            
            <!-- Input for Image URL -->
            <label for="image">Image URL:</label>
            <input  id="image" name="image" class="form-input" required value="<%= CurrentTem.img %>" >


            <label for="Address">Address:</label>
            <input type="text" id="Address" name="Address" class="form-input" required value="<%= CurrentTem.Address %>">

            <label for="About">About</label>
            <input type="text" id="About" name="About" class="form-input" required value="<%= CurrentTem.about %>">

            <!-- Submit Button -->
            <input type="submit" value="Submit" class="form-submit">
        </form>
    </div>

